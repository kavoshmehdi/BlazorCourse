    <MatAutocompleteList Items="@options" TItem="string" Label="یک مورد انتخاب کنید"></MatAutocompleteList>

    <div>
        <MatCheckbox @bind-Value="@checked3" Indeterminate="true">چک باکس</MatCheckbox>
